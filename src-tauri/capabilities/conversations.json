{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "conversations",
  "description": "FS + dialog for conversations store",
  "windows": ["main"],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "dialog:default",

    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",

    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA/conversations/*" },
        { "path": "$APPDATA/conversations/**/*" }
      ]
    },
    "fs:allow-mkdir",
    "fs:allow-read-dir",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-rename",
    "fs:allow-remove",
    "fs:allow-exists"
  ]
}
