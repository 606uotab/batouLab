{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "conversations",
  "description": "FS access for conversations store",
  "windows": ["main"],
  "permissions": [
    "core:path:default",
    "core:event:default",
    { "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA/conversations/*" },
        { "path": "$APPDATA/conversations/**/*" }
      ]
    },
    "fs:allow-mkdir",
    "fs:allow-read-dir",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-rename",
    "fs:allow-remove",
    "fs:allow-exists"
  ]
}
